{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_APP_NAME": "Desireplay",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_SUPPORT_EMAIL": "hello@desireplay.com",
    "VITE_SUPPORT_EMAIL_ALT": "support@desireplay.com"
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": "vite",
  "functions": {
    "app/**/*": {
      "maxDuration": 30
    }
  }
}